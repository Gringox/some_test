<%= form_tag "/user", method: "post" do %>
  Username: <%= text_field_tag :username, params[:username] %> <br>
  Password: <%= password_field_tag :password, params[:password] %> <br>
  Password Confirmation: <%= password_field_tag :password_confirmation, params[:password_confirmation] %> <br>
  <%= submit_tag "Create" %>
<% end %>
